<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_category"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/img_jack_honey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_category_star"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@id/textview_category_rating_voter"
        app:layout_constraintRight_toLeftOf="@id/textview_category_rating_score"
        app:layout_constraintTop_toTopOf="@id/textview_category_rating_voter" />

    <TextView
        android:id="@+id/textivew_category_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/textivew_category_name"
        app:layout_constraintLeft_toLeftOf="@id/textivew_category_name"
        app:layout_constraintTop_toTopOf="@id/imageview_category"
        tools:text="페일에일" />

    <TextView
        android:id="@+id/textivew_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/imageview_category"
        app:layout_constraintLeft_toRightOf="@id/imageview_category"
        app:layout_constraintTop_toBottomOf="@id/textivew_category_type"
        tools:text="세븐브로이" />

    <TextView
        android:id="@+id/textview_category_rating_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/textview_category_rating_voter"
        app:layout_constraintRight_toLeftOf="@id/textview_category_rating_voter"
        app:layout_constraintTop_toTopOf="@id/textview_category_rating_voter"
        tools:text="4.77" />

    <TextView
        android:id="@+id/textview_category_rating_voter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@id/imageview_category"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageview_category"
        tools:text="(1234)" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>